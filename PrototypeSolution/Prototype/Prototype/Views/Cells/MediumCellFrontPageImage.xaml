<?xml version="1.0" encoding="utf-8" ?>
<mr:ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mr="clr-namespace:MR.Gestures;assembly=MR.Gestures"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:helpers="clr-namespace:Prototype.Views.Helpers"
             xmlns:components="clr-namespace:Prototype.Views.Components"
             x:Class="Prototype.Views.Cells.MediumCellFrontPageImage"
             Tapped="TappedGesture"
             LongPressing="LongPressingGesture">

    <ViewCell.View>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ffimageloading:CachedImage x:Name="image"
                Grid.Row="0" 
                Grid.Column="0" 
                LoadingPlaceholder="{helpers:ImageFromFile imageTransparentSmall.png}"
                Source="{Binding Article.image.versions.small_article_220.url}"
                BitmapOptimizations="True"
                DownsampleToViewSize="True"
                HorizontalOptions="StartAndExpand"
                IsOpaque="True"/>
            <Label Text="{Binding Article.titles.FRONTPAGE}" 
               Grid.Row="0" 
               Grid.Column="1" 
               Grid.ColumnSpan="2"
               FontSize="Small"/>

            <components:IconStackLayoutComponent 
                Orientation="Horizontal"
                Grid.Row="0" 
                Grid.Column="1"
                Grid.ColumnSpan="2" 
                HorizontalOptions="End"
                VerticalOptions="End"/>
            
        </Grid>
    </ViewCell.View>
</mr:ViewCell>

