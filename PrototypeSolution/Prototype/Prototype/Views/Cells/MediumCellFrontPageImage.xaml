<?xml version="1.0" encoding="utf-8" ?>
<mr:ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mr="clr-namespace:MR.Gestures;assembly=MR.Gestures"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:components="clr-namespace:Prototype.Views.Components"
             xmlns:viewComponents="clr-namespace:Prototype.Views.ViewComponents"
             x:Class="Prototype.Views.Cells.MediumCellFrontPageImage"
             Tapped="TappedGesture"
             LongPressing="LongPressingGesture">

    <ViewCell.View>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ffimageloading:CachedImage x:Name="image"
                LoadingPlaceholder="{Binding Article.image.versions.f.url}"
                Source="{Binding Article.image.versions.small_article_220.url}"
                BitmapOptimizations="True"
                DownsampleToViewSize="True"
                IsOpaque="True"
                HorizontalOptions="StartAndExpand"
                CacheType="All"/>

            <Label Text="{Binding Article.titles.FRONTPAGE}" 
               Grid.Row="0" 
               Grid.Column="1" 
               Grid.ColumnSpan="2"
               FontSize="Small"/>

            <viewComponents:IconStackLayoutComponent 
                Orientation="Horizontal"
                Grid.Row="0" 
                Grid.Column="1"
                Grid.ColumnSpan="2" 
                HorizontalOptions="End"
                VerticalOptions="End"/>

            </Grid> 
    </ViewCell.View>
</mr:ViewCell>

