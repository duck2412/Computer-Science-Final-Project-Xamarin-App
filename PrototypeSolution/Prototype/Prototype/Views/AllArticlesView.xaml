<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Views.AllArticlesView"
             Title="ALLE NYHEDER">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ALL"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView x:Name ="listView"
                  ItemsSource="{Binding Grouped}"
                  IsRefreshing="{Binding IsRefreshing}"
                  IsPullToRefreshEnabled="True"
                  IsGroupingEnabled="true" 
                  HasUnevenRows="True"
                  GroupDisplayBinding="{Binding Key}"
                  GroupShortNameBinding="{Binding Key}"
                  ItemTapped="listView_ItemTapped">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout VerticalOptions="CenterAndExpand"
                            BackgroundColor="#213c68">
                            <Label Text="{Binding Key}" 
                                   TextColor="White" 
                                   VerticalOptions="Center"
                                   Margin="10"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding PublishedTimeOfDay}" 
                                   Margin="10"
                                   Grid.Row="0" 
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"/>
                            <Label Text="{Binding Title}" 
                                Margin="10"
                                Grid.Row="0" 
                                Grid.Column="2" 
                                Grid.ColumnSpan="5"/>
                        </Grid>
                    </ViewCell>


                    <!--<ViewCell>
                        <RelativeLayout>
                            <Label x:Name="timeLabel" 
                                Text="{Binding PublishedTimeOfDay}" 
                                   Margin="10"
                                   RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=x,Factor=0,Constant=0}"
                                   />
                            <Label Text="{Binding Title}" 
                                Margin="10"
                               RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=timeLabel,Property=x,Factor=1,Constant=0}"
                                />
                        </RelativeLayout>
                    </ViewCell>-->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>

</ContentPage>