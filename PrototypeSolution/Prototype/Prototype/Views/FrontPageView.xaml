<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Views.FrontPageView"
             Title="FORSIDE">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ALL"/>
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout x:Name="stackTopArticle" Orientation="Vertical">
                <!--<Image Source="{Binding BigImage}" HorizontalOptions="Start"/>-->
                <Label Text="{Binding Title}"/>
                <Label Text="{Binding Teaser}"/>
            </StackLayout>

            <ListView x:Name="lstView" ItemsSource="{Binding}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <!--<Image Source="{Binding SmallImage}" HorizontalOptions="Start"/>-->
                                    <Label Text="{Binding Title}"/>
                                    <Label Text="{Binding Teaser}"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>