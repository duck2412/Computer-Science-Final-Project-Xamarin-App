<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Views.LoginView"
             Title="LOG IND">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ALL"/>
    </ContentPage.ToolbarItems>

    <StackLayout Margin="5">
        <Label Text="E-mail"/>
        <Entry x:Name="entryEmail" Placeholder="Eksempel@mail.dk" Text="{Binding Email}"/>
        <Label Text="Adgangskode"/>
        <Entry x:Name="entryPassword" Placeholder="Adgangskode" Text="{Binding Password}" IsPassword="True"/>
        <Button Text="LOG IND" Command="{Binding LoginCommand}"/>
        <Button Text="GLEMT ADGANGSKODE?" Command="{Binding ForgotPasswordCommand}"/>
    </StackLayout>
</ContentPage>